        .navbar {
            position: fixed;
            width: 100%;
            z-index: 999;
            padding: 10px 0;
            font-family: 'Ubuntu', sans-serif;
            transition: all 0.3s ease;
        }

        .navbar a {
            color: #66FCF1;
        }

        .navbar.sticky {
            padding: 15px 0;
            background: #66FCF1;
        }

        .navbar .max-width {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .navbar .logo a {
            color: #66FCF1;
            font-size: 35px;
            font-weight: 600;
        }

        .navbar .logo a span {
            color: #66FCF1;
            transition: all 0.3s ease;
        }

        .navbar.sticky .logo a span {
            color: #66FCF1;
        }

        .navbar .menu li {
            list-style: none;
            display: inline-block;
        }

        .navbar .menu li a {
            display: block;
            color: #66FCF1;
            font-size: 15px;
            font-weight: 500;
            margin-left: 25px;
            transition: color 0.3s ease;
        }

        .navbar .menu li a:hover {
            color: #66FCF1;
        }

        .navbar.sticky .menu li a:hover {
            color: #fff;
        }
    </style>
</head>

